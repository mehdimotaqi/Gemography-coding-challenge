<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/itemBgColor"
    android:background="?android:attr/selectableItemBackground"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp"
    app:strokeWidth="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/repo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_margin="@dimen/simple_margin"
            android:textSize="@dimen/medium_text_size"
            tools:text="Repository Name"/>

        <TextView
            android:id="@+id/repo_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@+id/repo_name"
            android:textSize="@dimen/normal_text_size"
            android:layout_margin="@dimen/simple_margin"
            android:ellipsize="end"
            android:layout_alignStart="@+id/repo_name"
            tools:text="Repository Description"/>


        <ImageView
            android:id="@+id/owner_repo_avatar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="@dimen/simple_margin"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/repo_name"
            android:layout_below="@+id/repo_description"
            tools:src="@drawable/ic_launcher_background"
            android:layout_marginBottom="@dimen/simple_margin"
            android:contentDescription="@string/owner_repository_image" />

        <TextView
            android:id="@+id/repo_owner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/normal_text_size"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/simple_margin"
            android:layout_toEndOf="@+id/owner_repo_avatar"
            android:layout_alignTop="@+id/owner_repo_avatar"
            android:layout_alignBottom="@+id/owner_repo_avatar"
            tools:text="Owner Name"/>

        <TextView
            android:id="@+id/repo_number_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_star"
            tools:text="5.1"
            android:layout_margin="@dimen/simple_margin"
            android:textSize="@dimen/medium_text_size"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>